<Window x:Class="Week_13_16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week_13_16"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450">
    <StackPanel HorizontalAlignment="Left" Width="350" >
        <ComboBox Margin="5" Name="cboColor"
                  SelectionChanged="cboColor_SelectionChanged">
            <StackPanel Orientation="Horizontal" >
                <Rectangle Fill="Green" Width="30" Height="30" />
                <Label VerticalAlignment="Center">Green</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Rectangle Fill="Red" Width="30" Height="30" />
                <Label VerticalAlignment="Center">Red</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Rectangle Fill="Yellow" Width="30" Height="30" />
                <Label VerticalAlignment="Center">Yellow</Label>
            </StackPanel>
        </ComboBox>
        <Label Name="lbMsg"/>
    </StackPanel>

</Window>
